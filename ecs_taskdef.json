{
  "family": "vendor1007-2-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::067717894185:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::067717894185:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "vendor1007-2-api",
      "image": "067717894185.dkr.ecr.ap-northeast-1.amazonaws.com/vendor1007-2-api:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "S3_BUCKET_NAME", "value": "vendor-rag-bucket" },
        { "name": "S3_PREFIX", "value": "faiss/index" },
        { "name": "AWS_REGION", "value": "ap-northeast-1" },
        { "name": "BEDROCK_EMBEDDINGS_MODEL_ID", "value": "amazon.titan-embed-text-v2" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vendor1007-2-api",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
