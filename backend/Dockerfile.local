FROM python:3.10-slim

WORKDIR /app

# 依存関係
COPY backend/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# アプリコード
COPY backend/ /app/backend/

# rag_core も backend 配下にある
COPY backend/rag_core/ /app/rag_core/

# data も backend 配下にある
COPY backend/data/ /app/data/

# 学習済みベクトルストア（local 固定用）
# COPY vectorstore/ /app/vectorstore/   # 存在しないのでコメントアウト

EXPOSE 8080
CMD ["uvicorn", "backend.main_app:app", "--host", "0.0.0.0", "--port", "8080"]
